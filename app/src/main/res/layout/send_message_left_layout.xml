<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingRight="80dp"
    android:paddingLeft="15dp">

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_msg_from">

        <TextView
            android:text="Msg Id"
            android:visibility="gone"
            android:id="@+id/lblMsgId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="5dp"
            android:textColor="@color/gray"
            android:textStyle="normal"/>

        <TextView
            android:text="Manoj - Teacher"
            android:id="@+id/lblMsgFrom"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:textStyle="normal"
            android:typeface="normal"/>

        <TextView
            android:text="Designation"
            android:id="@+id/lblDesignation"
            android:layout_toRightOf="@id/lblMsgFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/gray"
            android:textStyle="normal"
            android:paddingLeft="8dp"/>

        <TextView
            android:text="Group Name"
            android:id="@+id/lblGroupName"
            android:layout_toRightOf="@id/lblDesignation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/gray"
            android:textStyle="normal"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/txtMsg"
            android:text="This message sent by teacher from MCA Department. Kurukshetra University, Kurukshetra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:padding="0dp"
            android:textColor="@color/black"
            android:layout_below="@id/lblMsgFrom"/>

        <TextView
            android:id="@+id/msgDate"
            android:text="@string/msgDate"
            android:textColor="@color/gray"
            android:layout_marginTop="2dp"
            android:layout_below="@id/txtMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_msg_from"/>

    </RelativeLayout>
</LinearLayout>